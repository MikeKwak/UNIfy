{
  "name": "unify",
  "version": "1.0.0",
  "description": "UNIfy - University accommodation recommendation system",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:server\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:server": "cd server && python app.py",
    "build": "cd frontend && npm run build",
    "install:all": "npm install && cd frontend && npm install && cd ../server && pip install -r requirements.txt",
    "start": "cd server && python app.py",
    "lint": "cd frontend && npm run lint"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "workspaces": [
    "frontend"
  ]
}

